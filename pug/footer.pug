#footer
  .container
    .row
      .col-12
        section.contact
          header
            h3!= md(site.flavor.contact.title)
          p!= md(site.flavor.contact.summary)
          ul.icons
            li
              a.icon(href= '/resume')
                +icon('email')
            
            for profile in site.basics.profiles
              li
                a.icon(href= profile.url)
                  +icon(profile.network.toLowerCase())
                  span.label= profile.network
