#footer
  .container
    .row
      .col-12
        section.contact
          header
            h3!= md(site.web.contact.title)
          p!= md(site.web.contact.summary)
          ul.icons
            li
              a.icon(href= 'mailto:' + site.basics.email)
                +icon('envelope')
            
            for profile in site.basics.profiles
              li
                a.icon(href= profile.url)
                  +icon(profile.network.toLowerCase())
                  span.label= profile.network
