mixin icon(name)
  svg( class="icon-" + name )
    use( xlink:href="icons.svg#icon-" + name )

mixin image(src)
  case src.split('.').pop()
    when 'webm' 
      video(autoplay loop muted playsinline)
        source(type="video/webm", src=src)
    when 'mpg4'
      video(autoplay loop muted playsinline)
        source(type="video/mpg4", src=src)
    default
      img(src=src)
        
mixin resizedimage(src, width, height)
  case src.split('.').pop()
    when 'webm'
      +image(src)
    when 'mpg4'
      +image(src)
    default
      +image(resize(src, width, height))
        
mixin period(startDate, endDate)
  -
    const duration = moment.duration
    let start = moment(startDate)
    let end = moment(endDate)
    let dt = end.diff(start)
    
  = start.format('MMMM YYYY')
  if ( duration(dt).months() > 0 )
    = ' - ' + (endDate && end.format('MMMM YYYY') || 'Present')
    .clock
      +icon('clock')
      = duration(dt).humanize()
