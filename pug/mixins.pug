mixin icon(name)
  svg( class="icon-" + name )
    use( xlink:href="icons.svg#icon-" + name )

mixin image(src)
  case src.split('.').pop()
    when 'webm' 
      video(autoplay loop muted playsinline)
        source(type="video/webm", src=src)
    when 'mpg4'
      video(autoplay loop muted playsinline)
        source(type="video/mpg4", src=src)
    default
      img(src=src)
